#!/bin/bash -l 

#SBATCH --account=mschatz1
#SBATCH --time=2:00:00
#SBATCH --partition=shared
#SBATCH --nodes=1
#SBATCH --cpus-per-task=22
#SBATCH --ntasks-per-node=1

prefix=`basename $1 .fastq`
datadir=`dirname $1`

##ml samtools/1.3
ml samtools

if [ -f $1 ] ; then
    minimap2 -a -x map-ont -t 22 $2 $1 | samtools view -b | samtools sort -o $datadir/../align/$prefix.sorted.bam -T $datadir/../align/$prefix.reads.tmp -
fi

samtools index $datadir/../align/$prefix.sorted.bam

