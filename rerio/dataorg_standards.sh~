#!/bin/bash

rawdir=/dilithium/Data/Nanopore/oxford/181010_ecoli_methylation_standards/all_data
datadir=/mithril/Data/Nanopore/projects/methbin
allsamps='ecoli_CpG ecoli_CpGGpC ecoli_GpC ecoli_Unmethylated'

if [ $1 == untar ] ; then
    for i in $allsamps ;
    do
	tar -xzf $rawdir/$i.fast5.tgz -C $datadir/raw
    done
fi

if [ $1 == multiraw ] ; then
    for i in $allsamps ;
    do
	mkdir -p $datadir/multiraw/$i
	single_to_multi_fast5 \
	    -t 36 \
	    -i $datadir/raw/$i \
	    -s $datadir/multiraw/$i \
	    -f $i \
	    --recursive
    done
fi

